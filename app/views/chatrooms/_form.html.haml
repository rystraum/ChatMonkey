= form_for(@chatroom) do |f|
  - if @chatroom.errors.any?
    #error_explanation
      %h2= "#{pluralize(@chatroom.errors.count, "error")} prohibited this chatroom from being saved:"
      %ul
        - @chatroom.errors.full_messages.each do |msg|
          %li= msg

  = f.label :topic
  = f.text_field :topic

  = f.submit

